extends layout

block content
  div.text-center
    form(method="post" action="").form-signin
      img(src="/images/bootstrap-solid.svg" alt="" width="72" height="72").mb-4
      h1.h3.mb-3.font-weight-normal
        | Please sign in
      label(for="inputUserName").sr-only
        | User Name
      input#inputUserName(name="username" placeholder="Username" required autofocus).form-control
      label(for="inputPassword").sr-only
        | Password
      input#inputPassword(type="password" name="password" placeholder="Password" required).form-control
      button(type="submit").btn.btn-lg.btn-primary.btn-block
        | Sign in
